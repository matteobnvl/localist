{% extends 'base.html.twig' %}

{% block title %}Notice{% endblock %}

{% block body %}
    <h1>Notice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notice.id }}</td>
            </tr>
            <tr>
                <th>PostedBy</th>
                <td>{{ notice.postedBy }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ notice.text }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ notice.note }}</td>
            </tr>
            <tr>
                <th>PostedAt</th>
                <td>{{ notice.postedAt ? notice.postedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_notice_index') }}">back to list</a>

    <a href="{{ path('app_notice_edit', {'id': notice.id}) }}">edit</a>

    {{ include('notice/_delete_form.html.twig') }}
{% endblock %}
