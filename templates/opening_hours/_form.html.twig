        {{ form_errors(form.openingTime) }}
    </div>
    
    <div class="w-1/5 px-3">
        {{ form_label(form.closingTime, 'Heure de fermeture', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
