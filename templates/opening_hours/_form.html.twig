    </div>
    
    <div class="w-1/5 px-3 flex items-center">
        {{ form_label(form.isOpen, 'Est ouvert', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
        {{ form_widget(form.isOpen, {'attr': {'class': 'form-checkbox h-5 w-5 text-gray-600'}}) }}
        {{ form_errors(form.isOpen) }}
    </div>
    
    <div class="w-1/5 px-3 flex items-center">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            {{ button_label|default('Ajouter') }}
        </button>
    </div>
</div>


