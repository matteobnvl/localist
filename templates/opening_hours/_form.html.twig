        {{ form_label(form.day, 'Jour', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
        {{ form_widget(form.day, {
            'attr': {
                'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline',
                'disabled': edit ? 'disabled' : false
            }
        }) }}
        {{ form_errors(form.day) }}
    </div>
    
    
    <div class="w-1/5 px-3">
        {{ form_label(form.openingTime, 'Heure d\'ouverture', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
